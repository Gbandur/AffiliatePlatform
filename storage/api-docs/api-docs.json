{
    "openapi": "3.0.0",
    "info": {
        "title": "Affzoo Api",
        "version": "0.1"
    },
    "paths": {
        "/api/v1/leads/save": {
            "post": {
                "operationId": "App\\Http\\Controllers\\Api\\Lead\\LeadController::save",
                "responses": {
                    "200": {
                        "description": "Send lead to Affzoo system"
                    }
                }
            }
        },
        "/api/v1/leads/{id}/status": {
            "get": {
                "operationId": "App\\Http\\Controllers\\Api\\Lead\\LeadController::leadStatus",
                "responses": {
                    "200": {
                        "description": "Get Lead Status"
                    }
                }
            }
        },
        "/api/v1/leads/{id}/report-conversion": {
            "post": {
                "operationId": "App\\Http\\Controllers\\Api\\Lead\\LeadController::reportConversion",
                "responses": {
                    "200": {
                        "description": "Get lead conversion status from Brand CRM"
                    }
                }
            }
        }
    },
    "security": [
        []
    ]
}